                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#200F53"
                        CornerRadius="10" 
                        Padding="10"
                        Margin="0,5,5,0">
